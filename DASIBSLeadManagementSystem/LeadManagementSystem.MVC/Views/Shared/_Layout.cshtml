@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon icon-->
    <link rel="shortcut icon" type="image/png" href="~/images/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <!-- Core Css -->
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" />
    <title>EzFlow Admin</title>
</head>

<body class="link-sidebar">
    <!-- Preloader -->
    <div class="preloader">
        <img src="~/images/logo.png" alt="loader" class="lds-ripple img-fluid" />
    </div>
    <div id="main-wrapper">
        <!-- Sidebar Start -->
        <aside class="left-sidebar with-vertical">
            <div>
                <!-- ---------------------------------- -->
                <!-- Start Vertical Layout Sidebar -->
                <!-- ---------------------------------- -->
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a href="#" class="text-nowrap logo-img logo-hld">
                        <img src="~/images/logo.png" class="" width="60" alt="EzFlow" /> <span class="logo-txt">E<span class="deepred-color">z</span>Flow</span>
                    </a>
                    <a href="javascript:void(0)" class="sidebartoggler ms-auto text-decoration-none fs-5 d-block d-xl-none">
                        <img src="~/images/close.png" class="" width="30" alt="close" />
                        <i class="ti ti-x"></i>
                    </a>
                </div>
                

                <nav class="sidebar-nav scroll-sidebar" data-simplebar>
                    <ul id="sidebarnav">
                        <!-- ---------------------------------- -->
                        <!-- Home -->
                        <!-- ---------------------------------- -->
                        <li class="nav-small-cap">
                            <span class="hide-menu">Home</span>
                        </li>
                        <!-- ---------------------------------- -->
                        <!-- Dashboard -->
                        <!-- ---------------------------------- -->
                        <li class="sidebar-item ">
                            <a class="sidebar-link @(IsActive("Dashboard"))" asp-controller="Dashboard" asp-action="Index">
                                <span>
                                    <img src="~/images/left-menu-icon-1.png" class="" width="20" alt="Dashboard" />
                                </span>
                                <span class="hide-menu">Dashboard</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link @(IsActive("LeadSource"))" asp-controller="LeadSource" asp-action="Index">
                                <span>
                                    <img src="~/images/left-menu-icon-2.png" class="" width="20" alt="Lead Sources" />
                                </span>
                                <span class="hide-menu">Lead Sources</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link @(IsActive("QueueManagement"))" asp-controller="QueueManagement" asp-action="Index">
                                <span>
                                    <img src="~/images/left-menu-icon-3.png" class="" width="20" alt="Queue Management" />
                                </span>
                                <span class="hide-menu">Queue Management</span>
                            </a>
                        </li>
                    </ul>
                </nav>


                <!-- ---------------------------------- -->
                <!-- Start Vertical Layout Sidebar -->
                <!-- ---------------------------------- -->
            </div>
        </aside>
        <!--  Sidebar End -->
        <div class="page-wrapper">
            <!--  Header Start -->
            <header class="topbar">
                <div class="with-vertical">
                    <!-- ---------------------------------- -->
                    <!-- Start Vertical Layout Header -->
                    <!-- ---------------------------------- -->
                    <nav class="navbar navbar-expand-lg p-0">
                        <ul class="navbar-nav">
                            <li class="nav-item nav-icon-hover-bg rounded-circle ms-n2">
                                <a class="nav-link sidebartoggler" id="headerCollapse" href="javascript:void(0)">
                                    <i class="fa fa-bars"></i>
                                </a>
                            </li>
                        </ul>

                        <h4 class="lh-base mb-0">Welcome Back to <small class="text-muted">EzFlow ! </small></h4>
                        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                            <div class="d-flex align-items-center justify-content-between">

                                <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-center">

                                    <!-- ------------------------------- -->
                                    <!-- start profile Dropdown -->
                                    <!-- ------------------------------- -->
                                    <li class="nav-item dropdown">
                                        <a class="nav-link pe-0" href="javascript:void(0)" id="drop1" aria-expanded="false">
                                            <div class="d-flex align-items-center">
                                                <div class="user-profile-img">
                                                    <img src="~/images/user-3.png" class="rounded-circle" width="35" height="35" alt="EzFlow" />
                                                </div>
                                            </div>
                                        </a>
                                        <div class="dropdown-menu content-dd dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop1">
                                            <div class="profile-dropdown position-relative" data-simplebar>
                                                <div class="py-3 px-7 pb-0">
                                                    <h5 class="mb-0 fs-5 fw-semibold">User Profile</h5>
                                                </div>
                                                <div class="d-flex align-items-center py-9 mx-7 border-bottom">
                                                    <img src="~/images/user-3.png" class="rounded-circle" width="80" height="80" alt="EzFlow" />
                                                    <div class="ms-3">
                                                        <h5 class="mb-1 fs-3">@(ViewContext.HttpContext.Session.GetString("Username") ?? "Guest")</h5>
                                                        <span class="mb-1 d-block">@(ViewContext.HttpContext.Session.GetString("Desciption"))</span>
                                                        <p class="mb-0 d-flex align-items-center gap-2">
                                                            @(ViewContext.HttpContext.Session.GetString("UserPrincipal"))
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="d-grid py-4 px-7 pt-8">
                                                    <a asp-action="Logout" asp-Controller="Login" class="btn btn-outline-primary">Log Out</a>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                    <!-- ------------------------------- -->
                                    <!-- end profile Dropdown -->
                                    <!-- ------------------------------- -->
                                </ul>
                            </div>
                        </div>
                    </nav>
                    <!-- ---------------------------------- -->
                    <!-- End Vertical Layout Header -->
                    <!-- ---------------------------------- -->
                    <!-- ------------------------------- -->
                    <!-- apps Dropdown in Small screen -->
                    <!-- ------------------------------- -->
                </div>

            </header>
            @* <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div> *@
            @RenderBody()
            @functions {
                string IsActive(string controller)
                {
                    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                    return (currentController == controller) ? "active" : "";
                }
            }
            <footer>
                <div class="container-fluid">
                    <div class="d-flex justify-content-end  py-3 pt-0 flex-md-nowrap flex-wrap gap-sm-0 gap-3">
                        <div class="d-flex gap-3 align-items-start">
                            <p class="mb-0">Copyright ©  2025 EzFlow. All rights reserved.</p>
                        </div>
                        <div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
    <script src="~/js/vendor.min.js"></script>
    <!-- Import Js Files -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/simplebar.min.js"></script>
    <script src="~/js/app.init.js"></script>
    <script src="~/js/theme.js"></script>
    <script src="~/js/app.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/sidebarmenu.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/jquery.datatables.min.js"></script>
    <script src="~/js/datatable-basic.init.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script>
        $(".counter-carousel").owlCarousel({
           loop: false,
           rtl: true,
           margin: 15,
           mouseDrag: true,
           rewind: true,
           center: false,
           nav: false,
           responsive: {
             0: {
               items: 2,
               loop: true,
             },
             576: {
               items: 2,
               loop: true,
             },
             768: {
               items: 3,
               loop: true,
             },
             1200: {
               items: 5,
               loop: true,
             },
             1400: {
               items: 7,
               loop: false,
             },
           },
         });
    </script>

</body>
</html>